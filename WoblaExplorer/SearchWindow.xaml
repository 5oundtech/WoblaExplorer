<Window x:Class="WoblaExplorer.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchWindow" Height="400" Width="600" x:Name="SWindow">
    <Grid>
        <ListBox Name="LbSearchResults" MouseDoubleClick="LbSearchResults_OnMouseDoubleClick" MouseRightButtonUp="LbSearchResults_OnMouseRightButtonUp">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="MenuItem_OnClick"/>
                    <MenuItem Header="Show in Windows Explorer" Click="MenuItem_OnClick"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</Window>
